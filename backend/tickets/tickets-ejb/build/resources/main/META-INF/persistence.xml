<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="TicketsSource">
        <jta-data-source>java:/PostgresDS</jta-data-source>
        <class>com.brigada.tickets_ejb.model.Coordinates</class>
        <class>com.brigada.tickets_ejb.model.Address</class>
        <class>com.brigada.tickets_ejb.model.Venue</class>
        <class>com.brigada.tickets_ejb.model.Ticket</class>
        <class>com.brigada.tickets_ejb.model.Person</class>
    </persistence-unit>
    <persistence-unit name="PersonsSource">
        <jta-data-source>java:/PostgresDS</jta-data-source>
        <class>com.brigada.tickets_ejb.model.Coordinates</class>
        <class>com.brigada.tickets_ejb.model.Address</class>
        <class>com.brigada.tickets_ejb.model.Venue</class>
        <class>com.brigada.tickets_ejb.model.Ticket</class>
        <class>com.brigada.tickets_ejb.model.Person</class>
    </persistence-unit>
</persistence>